@model List<TheBookCave.Models.ViewModels.BookListViewModel>
<link rel="stylesheet" href="~/css/details.css" />

<div id="detailsContainer">
@{
    foreach(var book in Model)
    {
        <div id="detailsImage">
            <img src="@book.Image" alt="No Images" id="cover">
        </div>
        <div id="detailsDescription">
            <h2>@book.Title</h2>
            <h3>@book.Author</h3>
            <h4>@book.Genre</h4>
            <h4>Rating: @book.Rating</h4>
            <h4>$ @book.Price</h4>
            <p>@book.Description</p>
        </div>
        
        break;
    }
}
</div>