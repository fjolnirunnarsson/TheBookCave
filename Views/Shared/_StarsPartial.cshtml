@using TheBookCave.Models
@using System.Collections.Generic

<link rel="stylesheet" href="~/css/detail.css" />

@model Double

@{
    double Stars(double rating)
    {
            
            if(rating > 0.24 && rating < 0.75){
                return 0.5;
            }
            else if(rating > 0.74 && rating < 1.25){
                return 1;
            }
            else if(rating > 1.24 && rating < 1.75){
                return 1.5;
            }
            else if(rating > 1.74 && rating < 2.25){
                return 2;
            }
            else if(rating > 2.24 && rating < 2.75){
                return 2.5;
            }
            else if(rating > 2.74 && rating < 3.25){
                return 3;
            }
            else if(rating > 3.24 && rating < 3.75){
                return 3.5;
            }
            else if(rating > 3.74 && rating < 4.25){
                return 4;
            }
            else if(rating > 4.24 && rating < 4.75){
                return 4.5;
            }
            else if(rating > 4.74){
                return 5;
            }
            else{
                return 0;
            }
    }

}

