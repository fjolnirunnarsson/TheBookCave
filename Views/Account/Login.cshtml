@model TheBookCave.Models.ViewModels.LoginViewModel

<h1>Login</h1>

<form asp-action="Login" asp-controller="Account" class="form-control form-horizontal">
    <div class="form-group">
        <input type="email" asp-for="Email" class="from-control" placeholder="Enter email...">
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="from-control" placeholder="Enter password...">
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" asp-for="RememberMe"/> Remember me
        </label>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Login"/>
    </div>
</form>