@{
    Layout=null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/employee.css" />
    <title>Document</title>
</head>
<body>
    <div>
        <h2>Welcome to Emplyee sites!</h2>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Home"> <button>Log out</button> </a>
        <a asp-action="Create" asp-controller="EmployeeSite"><button>Create book</button></a>
        <a href="#"><button>Discount codes</button></a>


    </div>

<table>
    <tr>
        <th>Title</th>
        <th>Quantity</th>
        <td>Price</td>
        <td>Discount</td>
        <td>DPrice</td>
    </tr>
    </br>
    @foreach(var book in @Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Quantity</td>
            <td>@book.Price</td>
            <td>@book.Discount</td>
            <td>@book.DiscountPrice</td>
            <td><a asp-controller="EmployeeSite" asp-action="Change" asp-route-id="@book.Id"><span id="delete-button" class="glyphicon glyphicon-wrench"></span></a></td>
            <td><a asp-controller="EmployeeSite" asp-action="Delete" asp-route-id="@book.Id"><span class="glyphicon glyphicon-trash"></span></a></td>
        </tr>
    }
    
</table>

<a href="#"><button>Create new employee</button></a>

</body>
</html>

