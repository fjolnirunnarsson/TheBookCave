@model TheBookCave.Models.ViewModels.RegisterViewModel

@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
</head>
<body>


<h2>Register a new employee</h2>
<form asp-action="Register" asp-controller="EmployeeSite" class="">
    <div class="form-group col-sm-8">
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email...">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8">
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name...">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8">
        <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name...">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8">
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password...">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8">
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
        </br>
        <button type="submit" class="btn ">Confirm</button>
        <a asp-controller="EmployeeSite" asp-action="Index" ><input type="button" value="Cancel" class="btn"></a>
    </div>
</form>

</body>
</html>